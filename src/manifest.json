{

  "manifest_version": 2,
  "name": "extension logging",
  "description": "view extension activity",
  "version": "1.0",

  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "default_title": "View Extensions Activity",
    "default_popup": "popup/popup.html"
  },

  "permissions": ["management"],

  "experiment_apis": {
    "activityLog": {
      "schema": "api/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "api/api.js",
        "paths": [["activityLog"]]
      }
    }
  }
}
